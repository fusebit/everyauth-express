{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "libc/",
    "rootDir": "src/",
    "removeComments": false,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
}
